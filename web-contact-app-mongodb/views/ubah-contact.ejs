<div class="container mt-4">
  <div class="row">
    <div class="col-md-7">
      <h2>Form Tambah Data Contaact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form
        method="post"
        action="/contact/update"
        class="row g-3 bg-dark-subtle p-md-3 mt-3"
      >
        <div class="col-md-6">
          <label for="inputNama" class="form-label">Nama Lengkap</label>
          <input
            type="text"
            class="form-control"
            id="inputNama"
            name="nama"
            value="<%= contact.nama %>"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="inputNoHP" class="form-label">Nomer HP</label>
          <input
            type="text"
            class="form-control"
            id="inputNoHP"
            name="nohp"
            value="<%= contact.nohp %>"
            required
          />
        </div>
        <div class="col-12">
          <label for="inputEmail" class="form-label">Email</label>
          <input
            type="email"
            id="inputEmail"
            class="form-control"
            placeholder="***@**.**"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <input
          type="text"
          name="oldNohp"
          value="<%= contact.oldNohp || contact.nohp %>"
        />
        <div class="col-12">
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-pencil-square"></i> Ubah Data
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
